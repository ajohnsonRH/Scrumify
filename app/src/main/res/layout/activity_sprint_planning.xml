<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="johnsoaa.awesometeams.com.scrumify.SprintPlanningActivity">

    <TextView
        android:id="@+id/planning_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/label_background_color"
        android:text="@string/when_does_it_start_text"
        android:textColor="@color/home_page_text_title_color"
        android:textSize="30dp" />

    <Button
        android:id="@+id/next_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@color/button_background_color"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Next"
        android:textColor="@color/button_text_color"
        android:textColorHighlight="@color/button_text_color"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_above="@+id/next_button"
        android:layout_below="@id/planning_title_text_view"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@id/scrollView"
            android:layout_width="wrap_content"
            android:verticalScrollbarPosition="right"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:background="@color/label_background_color">

            <TextView
                android:id="@+id/planning_content_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="@string/when_is_it_planned_text"
                android:textColor="@color/planning_text_color"
                android:textSize="18sp" />
        </ScrollView>

    </LinearLayout>
</RelativeLayout>
